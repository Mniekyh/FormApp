<!DOCTYPE html>
<html lang="pl">

<head>
    <meta charset="UTF-8">
    <title>Sprawy</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gray-100 min-h-screen">

    <nav class="bg-blue-600 p-4 text-white flex justify-between">
        <div class="font-bold text-xl">Twoje Sprawy</div>
        <div>
            <%= user.imie %>
                <%= user.nazwisko %> (
                    <%= user.rola %>)
                        <form action="/logout" method="POST" style="display: inline;">
                            <button type="submit" class="btn btn-outline-secondary">Wyloguj</button>
                        </form>
        </div>

    </nav>

    <div class="max-w-7xl mx-auto py-8 px-4">
        <h1 class="text-3xl font-bold mb-8">Lista spraw</h1>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            <% sprawy.forEach(sprawa => { %>
                <div class="bg-white shadow-md rounded-lg p-6 flex flex-col justify-between hover:shadow-lg transition-shadow">
                    <div>
                        <h2 class="text-xl font-semibold mb-2 text-gray-800">
                            <%= sprawa.Imie %>
                                <%= sprawa.Nazwisko %>
                        </h2>
                        <p class="text-gray-600"><strong>Kategoria:</strong>
                            <%= sprawa.Id_kategoria %>
                        </p>
                        <p class="text-gray-600"><strong>Adres:</strong>
                            <%= sprawa.Adres %>
                        </p>
                        <p class="text-gray-600"><strong>Telefon:</strong>
                            <%= sprawa.Telefon %>
                        </p>
                        <p class="text-gray-600"><strong>Mail:</strong>
                            <%= sprawa.Mail %>
                        </p>
                        <p class="text-gray-600"><strong>Opis:</strong>
                            <%= sprawa.Opis.substring(0, 100) %>...</p>
                        <p class="text-gray-600"><strong>Stan:</strong>
                            <%= sprawa.Stan %>
                        </p>
                        <p class="text-gray-600"><strong>Agent:</strong>
                            <%= sprawa.Id_agent %>
                        </p>
                    </div>
                    <div class="mt-4">
                        <a href="/sprawa/<%= sprawa.Id_sprawa %>" class="block w-full text-center bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600">
                            Zobacz szczegóły
                        </a>
                    </div>
                </div>
                <% }) %>
        </div>
    </div>

</body>

</html>